{
  "name": "cnvrs",
  "version": "1.0.1",
  "description": "ConverseJS as Electron App",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no tests yet...\" && exit 0",
    "start": "electron .",
    "build": "npm run build:clean && npm run build:electron",
    "build:clean": "rm -rf build/ .cache dist/",
    "build:electron": "electron-builder -mwl"
  },
  "author": {
    "name": "Lukas FÃ¼lling",
    "email": "lukas@k40s.net",
    "url": "https://lerks.blog/"
  },
  "license": "MIT",
  "homepage": "./",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^7.0.2",
    "electron": "^8.3.0",
    "electron-builder": "^22.6.0"
  },
  "build": {
    "appId": "sh.lrk.cnvrs",
    "files": [
      "main.js",
      "index.html",
      "assets/**/*",
      "lib/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "linux": {
      "target": "deb",
      "icon": "assets/logo.png",
      "category": "Development"
    }
  },
  "dependencies": {
    "bytebuffer": "^5.0.1",
    "converse.js": "^6.0.1",
    "electron-is-dev": "^1.2.0"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
